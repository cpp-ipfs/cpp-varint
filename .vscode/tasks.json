{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "docker",
            "type": "shell",
            "windows": {
                "command": "docker",
                "args": [
                    "run",
                    "--rm",
                    "-v",
                    "${workspaceFolder}:/root/src",
                    "--privileged",
                    "-it",
                    "cpp-ipfs/cpp-varint"
                ],
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(\/root\/src\/)(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 2,
                    "line": 3,
                    "column": 4,
                    "severity": 5,
                    "message": 6
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ]
}